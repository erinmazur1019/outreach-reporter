# ── HubSpot ──────────────────────────────────────────────────────────────────
# Private App access token (Settings → Integrations → Private Apps)
# Required scopes: crm.objects.contacts.read, crm.objects.communications.read,
#                  crm.objects.emails.read, crm.objects.notes.read
HUBSPOT_ACCESS_TOKEN=pat-na1-xxxxxxxxxxxxxxxxxxxx

# HubSpot contact property that stores Creator / Agency / Affiliate classification.
# Check exact name in: HubSpot → Properties → Contact Properties
HUBSPOT_LEAD_TYPE_PROPERTY=lead_type

# Comma-separated values that map to each bucket (case-insensitive substring match)
CREATOR_VALUES=creator,content_creator,model
AGENCY_VALUES=agency,management_agency,mgmt_agency
AFFILIATE_VALUES=affiliate,partner

# How many hours back to look for engagements (default 24)
LOOKBACK_HOURS=24

# ── Google Sheets ─────────────────────────────────────────────────────────────
# Path to the service account JSON key file (relative to project root)
GOOGLE_SERVICE_ACCOUNT_JSON=service_account.json

# From the Sheets URL: https://docs.google.com/spreadsheets/d/<ID>/edit
GOOGLE_SPREADSHEET_ID=1BxiMVs0XRA5nFMdKvBdBZjgmUUqptlbs74OgVE2upms

# Name of the worksheet/tab to write to
GOOGLE_WORKSHEET_NAME=BizDev

# ── Slack ─────────────────────────────────────────────────────────────────────
# Bot OAuth token (xoxb-...)  — needs chat:write, chat:write.public permissions
SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxx-xxxxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxx

# Signing secret (from your Slack App settings → Basic Information)
SLACK_SIGNING_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Channel to post the daily summary to
SLACK_REPORT_CHANNEL=#creator-reporting

# ── Scheduler (FastAPI server only) ──────────────────────────────────────────
REPORT_HOUR=9
REPORT_MINUTE=0

# ── Storage ───────────────────────────────────────────────────────────────────
MANUAL_COUNTS_FILE=data/manual_counts.json
